<Window x:Class="UrlExtractor.Wpf.Forms.DetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:UrlExtractor.Wpf.Controls.FormPanel"
        xmlns:formPanel="clr-namespace:UrlExtractor.Wpf.Controls.FormPanel"
        Title="Window5" Height="400" Width="500">
    <DockPanel Margin="10">
        <formPanel:FormGroupHost DockPanel.Dock="Top">
            <formPanel:FormGroup Header="General Details">
                <TextBlock Text="Title:"/>
                <TextBox/>
                <TextBlock Text="Area:"/>
                <ComboBox/>
                <TextBlock Text="Category:"/>
                <ComboBox/>
                <TextBlock Text="Assigned To:"/>
                <ComboBox/>
                <TextBlock Text="Status:"/>
                <ComboBox/>
                <TextBlock Text="Estimate:"/>
                <TextBox/>
            </formPanel:FormGroup>

            <l:FormGroup Header="User Defined Fields">
                <TextBlock Text="Tags:"/>
                <TextBox/>
                <TextBlock Text="Version:"/>
                <TextBox/>
            </l:FormGroup>

        </formPanel:FormGroupHost>
        <GroupBox Header="Comments">
            <TextBox TextWrapping="Wrap" Margin="5"/>
        </GroupBox>
    </DockPanel>
</Window>


