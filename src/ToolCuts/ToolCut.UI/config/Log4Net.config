<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <root>
    <!-- Log Level -->
    <level value="FATAL" />
    <!-- Targets -->
    <appender-ref ref="LogFileAppender" />
    <appender-ref ref="nHibernateAppender" />
  </root>

  <logger name="ToolCut.UI">
    <level value="DEBUG" />
    <appender-ref ref="ConsoleAppender" />
  </logger>

  <logger name="ToolCut.UI">
    <level value="INFO" />
    <appender-ref ref="nHibernateAppender" />
  </logger>

  <logger name="NHibernate" additivity="false">
    <level value="FATAL"/>
    <appender-ref ref="ConsoleAppender" />
  </logger>



  <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
    <!-- Log path -->
    <param name="File" value="logs\\" />
    <param name="AppendToFile" value="true" />
    <!-- Log filename -->
    <datePattern value="dd-MM-yyyy.TXT" />
    <maxSizeRollBackups value="10" />
    <rollingStyle value="Date" />
    <maximumFileSize value="1MB" />
    <!-- set to false to create daily or hourly logs -->
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p %u %c %l %m %n" />
    </layout>
  </appender>

 
  <appender name="nHibernateAppender" type="log4net.Appender.RollingFileAppender" >
    <!-- Log path -->
    <param name="File" value="logs\\nhibernate" />
    <param name="AppendToFile" value="true" />
    <!-- Log filename -->
    <datePattern value="dd-MM-yyyy.TXT" />
    <maxSizeRollBackups value="10" />
    <rollingStyle value="Date" />
    <maximumFileSize value="1MB" />
    <!-- set to false to create daily or hourly logs -->
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p %u %c %l %m %n" />
    </layout>
  </appender>

  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="[Header]\r\n" />
      <param name="Footer" value="[Footer]\r\n" />
      <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
    </layout>
  </appender>

</log4net>
